<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card" style="background-color: #4d2dff;">
      <div class="card-body">
        <form action="/register" method="POST">
          <input
            type="text"
            name="email"
            placeholder="Email"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="text"
            name="nombre_usuario"
            placeholder="Usuario"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="text"
            name="patente"
            placeholder="Patente"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="text"
            name="tipo_veiculo"
            placeholder="Modelo de Vehículo"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="password"
            name="password"
            placeholder="Contraseña"
            class="form-control mb-3"
            required
          />
          <input
            type="password"
            name="confirmpassword"
            placeholder="Confirmar Contraseña"
            class="form-control mb-3"
            required
          />
          <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
        <div class="mt-3">
          <p class="text-light">¿Usted tiene una cuenta?</p>
          <a href="/login" class="text-light">Ingresa aquí</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
