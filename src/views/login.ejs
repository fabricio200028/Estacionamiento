<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <img src="../public/imagenes/logo.png" >
        <form action="/login" method="POST">
          <input
            type="text"
            name="Gmail"
            placeholder="Gmail"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="text"
            name="username"
            placeholder="Username"
            class="form-control mb-3"
            required
            autofocus
          />
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="form-control mb-3"
            required
          />
          <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <div class="mt-3">
          <a href="/register" class="text-light">No tienes una cuenta? Registrate aqui!!!</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
